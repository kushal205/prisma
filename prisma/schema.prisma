generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Sport {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  image        String
  description  String
  pitches      Int
  price        Float
  location     String
  availability Int      @default(0)
  createdAt    DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
